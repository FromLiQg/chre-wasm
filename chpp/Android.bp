cc_library_static {
    name: "chre_chpp_linux",
    vendor: true,
    cflags: [
        "-DCHPP_SERVICE_ENABLED_WWAN",
    ],
    conlyflags: ["-std=c11"],
    srcs: [
        "transport.c",
        "app.c",
        "services.c",
        "clients.c",
        "platform/pal_api.c",
        "platform/linux/link.c",
        "platform/linux/memory.c",
        "platform/linux/notifier.c",
        "services/discovery.c",
        "services/loopback.c",
        "services/nonhandle.c",
        "clients/discovery.c",
        "services/wwan.c",
        "services/wwan_convert.c",
        "clients/wwan.c",
        "platform/linux/services/platform_wwan.c",
    ],
    export_include_dirs: [
        "platform/linux/include",
        "include",
    ],
    header_libs: [
        "chre_pal",
        "chre_api",
    ],
    export_header_lib_headers: [
        "chre_pal",
        "chre_api",
    ],
    host_supported: true,
}

cc_test_host {
    name: "chre_chpp_linux_tests",
    srcs: ["test/transport_test.cpp"],
    static_libs: ["chre_chpp_linux"],
}

cc_test_host {
    name: "chre_chpp_convert_tests",
    srcs: ["test/wwan_convert_test.cpp"],
    static_libs: ["chre_chpp_linux"],
}
